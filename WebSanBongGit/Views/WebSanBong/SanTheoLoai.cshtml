
@model PagedList.PagedList<WebSanBongGit.Models.SAN>
@using PagedList
@using PagedList.Mvc;

@{
    ViewBag.Title = "SanTheoLoai";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section id="yard-list-main">
    <h1 class="context">
        SÂN BÓNG AE
    </h1>
    <div class="grid wide">
        <div class="row">
            <div class="col l-3">
                <div class="yard-list-type">
                    <h2>Loại Sân</h2>
                    <ul class="yard-list">
                        @Html.Action("parttialviewLOAISAN", "WebSanBong")
                    </ul>
                </div>
            </div>

            <div class="col l-9">
                <h2 id="content-allsan">@ViewBag.TENLOAI</h2>
               
                <div class="row">
                    @foreach (var san in Model)
                    {
                        <div class="col l-3">
                            <div class="yard-list-fooball-item">
                                <a href="/WebSanBong/DatsanCHITIET/@san.MA_SAN">
                                </a>
                                <div class="name_san">@san.TEN_SAN </div>

                            </div>
                        </div>
                    }


                </div>

            </div>
        </div>
        <section id="pagination" class="section-p1">
            <div class="page">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>

            <div>
                @Html.PagedListPager(Model, page => Url.Action("ListSan", new { page = page }))
            </div>


        </section>
    </div>
</section>